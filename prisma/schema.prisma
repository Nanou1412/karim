generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "darwin"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String?
  price       Int
  image       String?
  createdAt   DateTime @default(now())
}
